{
  "extends": "./.meta/rh-ts-library/tsconfig.json",
  "compilerOptions": {
    "target": "es2018",
    "allowJs": true,
    "jsx": "preserve",
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/jsi-scratch.ts",
    ".next",
    ".project",
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts"
  ]
}
